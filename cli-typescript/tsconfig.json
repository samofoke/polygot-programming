{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"], // Add this line
    "lib": ["ESNext", "DOM"] // Optionally, include "DOM" if you use browser APIs
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

